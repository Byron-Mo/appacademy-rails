<h4><%= @cat.name %></h4>

<table>
  <tr>
    <td>Birthdate:</td>
    <td><%= @cat.birth_date %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex:</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
</table>
<br>
<label>Cat Rentals Requests</label>
<table>
  <tr>
    <td>Start Date</td>
    <td>End Date</td>
  </tr>
  <% @dates.each do |start_date, end_date| %>
    <tr>
      <td><%= start_date %></td>
      <td><%= end_date %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to "Cat Home", cats_url %>
