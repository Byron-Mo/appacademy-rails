<% form_action = @cat.persisted? ? cat_url(@cat) : cats_url %>
<% form_method = @cat.persisted? ? "PATCH" : "POST" %>
<% submit_text = @cat.persisted? ? "Update Cat!" : "Create Cat!" %>

<form action="<%= form_action %>" method="post">
  <input type="hidden" name="_method" value="<%= form_method %>">
    <label for="cat-name">Cat Name:</label>
    <input type="text" name="cat[name]" value="<%= @cat.name %>" id="cat-name">
    <br><br>
    <label>Gender</label>
    <br>
    <input type="radio"
           name="cat[sex]"
           id="cat-sex-female"
           value="F"
           <%= @cat.sex == "F" ? "checked" : ""%> >
    <label for="cat-sex-female">Female</label>
    <input type="radio"
           name="cat[sex]"
           id="cat-sex-male"
           value="M"
           <%= @cat.sex == "M" ? "checked" : ""%> >
    <label for="cat-sex-male">Male</label>
    <br><br>

    <label for="cat-color">Color</label>
    <br>
    <select name="cat[color]" id="cat-color">
      <option>Select a color!</option>
      <option value= "Brown" <%= @cat.color == "Brown" ? "selected" : "" %> >Brown</option>
      <option value= "White" <%= @cat.color == "White" ? "selected" : "" %> >White</option>
      <option value= "Orange" <%= @cat.color == "Orange" ? "selected" : "" %> >Orange</option>
      <option value= "Black" <%= @cat.color == "Black" ? "selected" : "" %> >Black</option>
    </select>
    <br><br>

    <label for="cat-birth-date">Birthdate</label>
    <input type="date" name="cat[birth_date]" id="cat-birth-date" value="<%= @cat.birth_date %>">
    <br><br>

    <label for="cat-description">Cat description:</label>
    <br>
    <textarea name="cat[description]" rows="8" cols="40" id="cat-description"><%= @cat.description %></textarea>
    <br><br>

    <input type="submit" value="<%= submit_text %>">
</form>
