<% action = band.persisted? ? band_url(band) : bands_url %>
<% method = band.persisted? ? "PATCH" : "POST" %>
<% message = band.persisted? ? "Update Band" : "Create Band" %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= auth_token %>
  <%= render "layouts/errors" %>
  <label for="band-name">Name: </label>
  <input type="text" name="band[name]" id="band-name" value="<%= band.name %>">
  <br><br>
  <input type="submit" value="<%= message %>">
</form>
